<h1><%= @car.model %></h1>
<h3>Capacity</h3>
<p> <%= @car.year %></p>
<h3>Status</h3>
<p> <%= @car.status %></p>
<p> <%= @car.color %></p>
<%= link_to 'Return to cars', cars_path %>

<% if @car.status == 'Free' %>
  <%= link_to 'Book', book_path(@car.id), method: 'post' %>
 <% else %>
  <%= link_to 'Unbook', book_path(@car.id), method: 'post' %>
<% end  %>
